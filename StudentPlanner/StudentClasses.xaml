<Window x:Class="StudentPlanner.StudentClasses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentPlanner"
        mc:Ignorable="d"
        Title="StudentClasses" Height="400" Width="500">
    <Grid Background="BlueViolet">
        <ListView x:Name="viewClassList" HorizontalAlignment="Left" Height="450" Margin="10,10,0,0" VerticalAlignment="Top" Width="274" ItemsSource="{Binding MyClasses}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Class" DisplayMemberBinding="{Binding Classname}" Width="100"/>
                    <GridViewColumn Header="Professor" DisplayMemberBinding="{Binding Profname}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="addclass" Content="Add Class" HorizontalAlignment="Left" Margin="289,10,0,0" VerticalAlignment="Top" Width="75" Click="addclass_Click"/>

    </Grid>
</Window>
