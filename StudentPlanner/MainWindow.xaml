<Window x:Class="StudentPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">

    <Grid Background="DarkBlue" Margin="0,0,-6.6,-0.2">
        <Button x:Name="close" Content="Close Window" HorizontalAlignment="Left" Margin="10,442,0,0" VerticalAlignment="Top" Width="86" Click="close_Click"/>
        <Button x:Name="classes" Content="View Classes" HorizontalAlignment="Left" Margin="208,214,0,0" VerticalAlignment="Top" Width="104" Click="classes_Click" Height="20"/>
        <Button x:Name="assignments" Content="View Assignments" HorizontalAlignment="Left" Margin="10,214,0,0" VerticalAlignment="Top" Width="167" Click="assignments_click" Height="20"/>
        <ListView x:Name="viewCompletedAssignments" HorizontalAlignment="Left" Height="199" Margin="10,10,0,0" VerticalAlignment="Top" Width="167">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Completed Assignments" Width="167" DisplayMemberBinding="{Binding AssignName}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="viewPastDue" HorizontalAlignment="Left" Height="198" Margin="10,239,0,0" VerticalAlignment="Top" Width="167">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Past Due" Width="167" DisplayMemberBinding="{Binding AssignName}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
